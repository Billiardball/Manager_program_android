<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:paddingBottom="14dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp">

        <ProgressBar
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imvTruckPhoto"
            android:layout_width="100dp"
            android:layout_height="161dp"
            android:src="@drawable/ic_default_img"
            android:scaleType="centerCrop"
            app:riv_border_color="@color/colorPrimary"
            app:riv_border_width="2dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="3dp">

        <TextView
            android:id="@+id/txvMaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fredline"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvEngine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Engine:"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/txvHorsePower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horse Power:"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/txvMileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mileage:"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/txvTransSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trans Speed:"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textSize="25sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15,000"
                        android:textColor="@color/colorTwitterOrigin"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_marginLeft="8dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btnCall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="@color/colorPrimary"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="@color/colorPrimary"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
