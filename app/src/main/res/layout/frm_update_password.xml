<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imvUserPhoto"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:riv_corner_radius="85dp"
        android:src="@drawable/avatar"
        app:riv_border_color="@color/colorBlack"
        app:riv_border_width="2dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actual password"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/edtActualPwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edt_border_color"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New password"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtNewPwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edt_border_color"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat password"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtRepeatPwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edt_border_color"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnUpdatePwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:text="Update"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"/>

</LinearLayout>
